<MainMenuScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 50
        Button:
            text: 'Boxes'
            size_hint_y: 0.5
            on_press:
                root.manager.current = 'boxes'

        Button:
            text: 'Items in the Box'
            size_hint_y: 0.5
            on_press:
                root.manager.current = 'box_items'

        Button:
            text: 'Boxes Test'
            size_hint_y: 0.5
            on_press:
                root.manager.current = 'boxes_test'

        Button:
            text: 'Exit'
            size_hint_y: 0.5
            on_press:
                app.stop()

<BoxesScreen>:
    name: 'boxes'
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        Button:
            text: 'Add Box'
            size_hint_y: None
            height: 40
            on_press:
                root.show_add_box_popup()
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 1
            ScrollView:
                size_hint: (1, 1)
                BoxLayout:
                    id: boxes_results_box
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
        Button:
            text: 'Back to Main Menu'
            size_hint_y: None
            height: 40
            on_press:
                root.manager.current = 'main'

<BoxItemsScreen>:
    name: 'box_items'
    # ... (unchanged code for BoxItemsScreen)

<BoxesScreenDisplayBoxes>:
    name: 'boxes_test'
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        Button:
            text: 'Back to Main'
            size_hint_y: None
            height: 40
            on_press:
                root.manager.current = 'main'
        ScrollView:
            size_hint: (1, 1)
            BoxLayout:
                id: main_container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height