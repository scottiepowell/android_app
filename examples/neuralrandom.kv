<MyRoot>:

    random_label: random_label

    BoxLayout:
        orientation: "vertical"
        on_size: app.print_size(self)
        on_pos: app.print_pos(self)

        Label:
            text: "NeuralRandom"
            font_size: 64
            color: 0.90, 0.47, .03, 1

        Label:
            id: random_label
            text: "-"
            font_size: 64

        Button:
            text: "Generate"
            font_size: 32
            size_hint_y: None
            height: 50
            on_press: root.generate_number()
